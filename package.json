{
  "name": "text-to-pay-api",
  "version": "1.0.0",
  "description": "All things backend!",
  "main": "server.js",
  "scripts": {
    "dev": "env-cmd -f ./env/.env sls offline",
    "staging": "env-cmd -f ./env/.env.staging sls offline",
    "prod": "env-cmd -f ./env/.env.prod sls offline",
    "deploy:staging": "sls deploy --env staging",
    "deploy:prod": "sls deploy --env prod",
    "lint": "eslint --ext .js .",
    "prettier": "prettier --write './**/*.js'"
  },
  "engines": {
    "node": "18.15.0",
    "npm": "9.5.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1348.0",
    "aws-serverless-express": "^3.4.0",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "env-cmd": "^10.1.0",
    "express": "^4.18.1",
    "express-request-id": "^1.4.1",
    "jsonwebtoken": "^8.5.1",
    "moment-timezone": "^0.5.34",
    "mongoose": "^6.3.4",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.30",
    "node-fetch": "^2.6.1",
    "p-map": "^4.0.0",
    "ramda": "^0.27.1",
    "serverless-dotenv-plugin": "^4.0.2",
    "serverless-http": "^3.2.0",
    "serverless-offline": "^12.0.4",
    "stripe": "^9.9.0",
    "twilio": "^3.82.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^3.0.4",
    "jest-fetch-mock": "^2.1.2",
    "leasot": "^8.0.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "leasot -x 'src/**/*.js'",
      "pre-push": "echo PUSHING NOW!!!"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier",
      "npm run lint",
      "git add ."
    ]
  }
}
